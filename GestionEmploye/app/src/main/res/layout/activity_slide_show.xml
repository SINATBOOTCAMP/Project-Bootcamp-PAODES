<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_slide_show"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/back_appg"
    tools:context="com.example.fr_philippe.gestionemploye.SlideShowActivity">


    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/logoapp"
        android:layout_marginBottom="15dp"
        android:id="@+id/imageView" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewerPager"
        android:layout_width="260dp"
        android:layout_height="175dp"
        android:background="@drawable/my_rec"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SliderDots"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Continuer"
            android:onClick="onLoginView"
            android:fontFamily="verdana"
            android:layout_gravity="bottom"
            android:background="@drawable/continu_button"
            style="@style/button_text"
            android:textAllCaps="false"/>

    </RelativeLayout>

</LinearLayout>
