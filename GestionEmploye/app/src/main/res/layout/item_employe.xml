<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ivProfilImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        app:srcCompat="@color/colorBlack" />

    <TextView
        android:id="@+id/etNomEmploye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/ivProfilImage"
        android:layout_toRightOf="@+id/ivProfilImage"
        android:text="TextView" />

    <TextView
        android:id="@+id/etFonctionEmploye"
        android:layout_width="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etNomEmploye"
        android:layout_alignStart="@+id/etNomEmploye"
        android:layout_below="@+id/etNomEmploye"
        android:text="TextView"
        android:textSize="15sp" />

</RelativeLayout>